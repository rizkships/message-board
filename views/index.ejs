<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    
    <% messages.forEach(function(message) { %>
        <div>
            <p>User: <%= message.user %></p>
            <p>Message: <%= message.text %></p>
            <p>Added: <%= message.added.toDateString() %></p>
        </div>
    <% }); %>
</body>
</html>

